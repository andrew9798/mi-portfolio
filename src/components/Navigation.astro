---
// Componente de Navegación
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-1 flex items-center">
        <img src="./public/favicon.png" alt="Logo" class="h-15 w-auto"/>
      </div>

      <!-- Navegación Desktop -->
      <div class="hidden md:flex space-x-8">
        <a href="#inicio" class="capitalize text-sm font-medium transition-colors duration-200 text-gray-600 hover:text-gray-900">
          Inicio
        </a>
        <a href="#acerca" class="capitalize text-sm font-medium transition-colors duration-200 text-gray-600 hover:text-gray-900">
          Acerca de Mí
        </a>
        <a href="#proyectos" class="capitalize text-sm font-medium transition-colors duration-200 text-gray-600 hover:text-gray-900">
          Proyectos
        </a>
        <a href="#habilidades" class="capitalize text-sm font-medium transition-colors duration-200 text-gray-600 hover:text-gray-900">
          Habilidades
        </a>
        <a href="#contacto" class="capitalize text-sm font-medium transition-colors duration-200 text-gray-600 hover:text-gray-900">
          Contacto
        </a>
      </div>

      <!-- Botón menú móvil -->
      <button id="menu-button" class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Menú móvil -->
  <div id="mobile-menu" class="md:hidden bg-white border-t border-gray-100 hidden">
    <div class="px-4 py-2 space-y-2">
      <a href="#inicio" class="block w-full text-left px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-900">
        Inicio
      </a>
      <a href="#acerca" class="block w-full text-left px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-900">
        Acerca de Mí
      </a>
      <a href="#proyectos" class="block w-full text-left px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-900">
        Proyectos
      </a>
      <a href="#habilidades" class="block w-full text-left px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-900">
        Habilidades
      </a>
      <a href="#contacto" class="block w-full text-left px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-900">
        Contacto
      </a>
    </div>
  </div>
</nav>
