---
// Componente Skills
const skills = {
  "Frontend": {
    icon: "globe",
    skills: ["React", "Vue.js", "Angular", "TypeScript", "Tailwind CSS", "SASS"]
  },
  "Backend": {
    icon: "server",
    skills: ["Node.js", "Python", "Express", "Django", "REST APIs", "GraphQL"]
  },
  "Base de Datos": {
    icon: "database",
    skills: ["MongoDB", "PostgreSQL", "MySQL", "Redis"]
  },
  "Herramientas": {
    icon: "tools",
    skills: ["Git", "Docker", "AWS", "Vercel", "Figma", "Jest"]
  }
};

const getIcon = (iconName) => {
  const icons = {
    globe: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>`,
    server: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>`,
    database: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>`,
    tools: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>`
  };
  return icons[iconName] || icons.tools;
};
---

<section id="habilidades" class="py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-light mb-6">Habilidades TÃ©cnicas</h2>
      <div class="w-24 h-px bg-amber-600 mx-auto"></div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {Object.entries(skills).map(([category, data]) => (
        <div class="h-full border-0 shadow-lg rounded-lg bg-white overflow-hidden">
          <div class="p-6">
            <div class="flex items-center mb-4">
              <svg class="text-amber-600 mr-3 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={getIcon(data.icon)} />
              </svg>
              <h3 class="text-lg font-serif font-semibold">{category}</h3>
            </div>
            <div class="space-y-2">
              {data.skills.map((skill) => (
                <span class="inline-block px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-md mr-2 mb-2">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
