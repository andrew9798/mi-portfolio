---

<section id="proyectos" class="py-20 bg-light text-primary flex flex-col md:flex-row">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl text-primary font-serif font-light mb-6">Proyectos Destacados</h2>
      <div class="w-24 h-px bg-amber-600 mx-auto"></div>
    </div>

    <!-- Lista de proyectos en Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-20 auto-cols-min">
      {projects.map((project, index) => (
        <div class="group hover:shadow-xl transition-all duration-300 border-0 shadow-lg rounded-lg overflow-hidden bg-white hover:scale-105 transition-transform duration-500">
          <!-- Imagen del proyecto -->
          <div class="aspect-video bg-gray-200 overflow-hidden">
            <div class="w-full h-full bg-gradient-to-br from-gray-300 to-gray-400 flex items-center justify-center">
              <img src={project.imageUrl} alt={project.title} />
            </div>
          </div>
          
          <!-- Contenido -->
          <div class="p-6">
            <h3 class="text-primary text-xl text-primary font-serif font-semibold mb-3">{project.title}</h3>
            <p class="text-gray-600 mb-4 leading-relaxed">{project.description}</p>
            
            <!-- Tecnologías -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map((tech) => (
                <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-md">
                  {tech}
                </span>
              ))}
            </div>
            
            <!-- Botones -->
            <div class="flex space-x-3">
              <a 
                href={project.liveUrl}
                class="inline-flex items-center px-3 py-2 border-2 border-primary text-primary hover:bg-primary hover:text-light transition-all duration-1000 text-sm font-medium"
              >
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                Demo
              </a>
              <a 
                href={project.githubUrl}
                class="inline-flex items-center px-3 py-2 border-2 border-gray-300 text-gray-600 hover:bg-gray-300 hover:text-gray-800 transition-all duration-1000 text-sm font-medium"
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
